@model ModalEF.EF.TaiKhoan

@{
    Layout = null;
}

<!doctype html>
<html lang="vi-vn">
<head>
    <title>Đăng nhập - Tìm đồ thất lạc</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="shortcut icon" type="image/x-icon" href="~/Assets/img/favicon1.ico">
    <link rel="stylesheet" href="~/Assets/Login/css/style.css">
</head>

<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-6">
                    <div class="wrap">
                        <div class="img" style="background-image: url(/Assets/Login/images/bg-1.jpg);"></div>
                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">Đăng ký</h3>
                                </div>
                            </div>
                            @using (Html.BeginForm())
                            {
                                <form action="#" class="signin-form">

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group mt-3">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        <label class="form-control-placeholder">Email</label>
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group mt-5">
                                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                                        <label class="form-control-placeholder">Mật khẩu</label>
                                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group mt-5">
                                        @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
                                        <label class="form-control-placeholder">Họ và tên</label>
                                        @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group mt-5">
                                        @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                        <label class="form-control-placeholder">Ngày sinh</label>
                                        @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group mt-3">
                                        <label class="form-control-placeholder">Giới tính</label>
                                        @Html.EditorFor(model => model.GioiTinh)
                                        @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group mt-5">
                                        @Html.EditorFor(model => model.MaSinhVien, new { htmlAttributes = new { @class = "form-control" } })
                                        <label class="form-control-placeholder">Mã sinh viên</label>
                                        @Html.ValidationMessageFor(model => model.MaSinhVien, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group mt-5">
                                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                                        <label class="form-control-placeholder">Số điện thoại</label>
                                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                                    </div>

                                    <div> @Html.ValidationSummary(false, "", new { @class = "text-danger" })</div>
                                    <div class="form-group mt-5">
                                        <button type="submit" class="form-control btn btn-primary rounded submit px-3">Đăng ký</button>
                                    </div>
                                </form>
                            }
                            <p class="text-center">Bạn đã có tài khoản? <a href="@Url.Action("Index", "Login")">Đăng nhập</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Assets/Login/js/jquery.min.js"></script>
    <script src="~/Assets/Login/js/popper.js"></script>
    <script src="~/Assets/Login/js/bootstrap.min.js"></script>
    <script src="~/Assets/Login/js/main.js"></script>

</body>
</html>