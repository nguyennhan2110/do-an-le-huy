@model ModalEF.EF.TaiKhoan

@{
    Layout = null;
}

<!doctype html>
<html lang="vi-vn">
<head>
    <title>Đăng ký - Tìm đồ thất lạc</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="shortcut icon" type="image/x-icon" href="~/Assets/img/favicon1.ico">
    <link rel="stylesheet" href="~/Assets/Login/css/style.css">
</head>

<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-8">
                    <div class="wrap">
                        <div class="img" style="background-image: url(/Assets/Login/images/bg-1.jpg);"></div>
                        <div class="login-wrap p-4 p-md-5">
                            <div class="">
                                <div class="w-100">
                                    <h3 class="mb-4">Đăng ký</h3>
                                </div>
                            </div>
                            <div class="card-body card-block ml-3">
                                @using (Html.BeginForm("Create", "Register", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="row form-group">
                                        <label class="pr-1  form-control-label col-md-3"><strong>Tên</strong></label>
                                        @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "col-md-7 form-control" } })
                                        @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="row form-group">
                                        <label class="pr-1  form-control-label col-md-3"><strong>Mã sinh viên</strong></label>
                                        @Html.EditorFor(model => model.MaSinhVien, new { htmlAttributes = new { @class = "col-md-7 form-control" } })
                                        @Html.ValidationMessageFor(model => model.MaSinhVien, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="row form-group">
                                        <label class="pr-1  form-control-label col-md-3"><strong>Email</strong></label>
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "col-md-7 form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="row form-group">
                                        <label class="pr-1  form-control-label col-md-3"><strong>Mật khẩu</strong></label>
                                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "col-md-7 form-control", @type = "password" } })
                                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="row form-group">
                                        <label class="pr-1  form-control-label col-md-3"><strong>Giới tính</strong></label>
                                        <div class="col-md-2">
                                            @Html.RadioButtonFor(model => model.GioiTinh, "True")
                                            Nam
                                        </div>
                                        <div class="col-md-2">
                                            @Html.RadioButtonFor(model => model.GioiTinh, "False")
                                            Nữ
                                        </div>
                                        @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="row form-group">
                                        <label class="pr-1  form-control-label col-md-3"><strong>Số điện thoại</strong></label>
                                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "col-md-7 form-control" } })
                                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="row form-group">
                                        <label class="pr-1  form-control-label col-md-3"><strong>Ngày sinh</strong></label>
                                        @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "col-md-7 form-control", @type = "date" } })
                                        @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="row form-group justify-content-center">
                                        <div class="col-md-offset-2 mt-2">
                                            <input type="submit" value="Đăng ký" class="btn btn-success" />
                                        </div>
                                    </div>
                                }
                            </div>
                            <p class="text-center">Bạn đã có tài khoản? <a href="@Url.Action("Index", "Login")">Đăng nhập</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Assets/Login/js/jquery.min.js"></script>
    <script src="~/Assets/Login/js/popper.js"></script>
    <script src="~/Assets/Login/js/bootstrap.min.js"></script>
    <script src="~/Assets/Login/js/main.js"></script>

</body>
</html>