@model ModalEF.EF.TaiKhoan
@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card d-flex">
            <div class="card-body card-block col-8 align-self-center">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row form-group mt-3">
                        <label class="pr-1  form-control-label col-md-3"><strong>Tên</strong></label>
                        @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "col-md-7 form-control", @disabled = "" } })
                        @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group mt-3">
                        <label class="pr-1  form-control-label col-md-3"><strong>Mã sinh viên</strong></label>
                        @Html.EditorFor(model => model.MaSinhVien, new { htmlAttributes = new { @class = "col-md-7 form-control", @disabled = "" } })
                        @Html.ValidationMessageFor(model => model.MaSinhVien, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group mt-3">
                        <label class="pr-1  form-control-label col-md-3"><strong>Email</strong></label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "col-md-7 form-control", @disabled = "" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group mt-3">
                        <label class="pr-1  form-control-label col-md-3"><strong>Giới tính</strong></label>
                        <input value="@Html.Raw(Model.GioiTinh ? "Nam" : "Nữ")" class="col-md-2 form-control" disabled />
                        @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group mt-3">
                        <label class="pr-1  form-control-label col-md-3"><strong>Số điện thoại</strong></label>
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "col-md-7 form-control", @disabled = "" } })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group mt-3">
                        <label class="pr-1  form-control-label col-md-3"><strong>Ngày sinh</strong></label>
                        <input value="@Html.Raw(Model.NgaySinh.ToString().Substring(0,9))" class="col-md-7 form-control" disabled />
                        @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                    </div>
                
                    <div class="row form-group mt-3">
                        <label class="pr-1  form-control-label col-md-3"><strong>Ảnh đại diện</strong></label>
                        <div>
                            @{
                                if (Model.AnhDaiDien != null)
                                {
                                    <img src="~/FileUpload/@Model.AnhDaiDien" style="height: 240px; width: 240px" />
                                }
                                else
                                {
                                    <p>Chưa thêm ảnh đại diện</p>
                                }
                            }
                        </div>
                    </div>

                    <div class="row form-group my-3">
                        <div class="col-md-offset-2 col-md-5">
                            <i class="menu-icon fa fa-arrow-circle-left"></i>
                            @Html.ActionLink("Trang chủ", "Index", "Home")
                        </div>
                        <div class="col-md-offset-2 col-md-5">
                            <a href="/TaiKhoans/Edit/@Model.MaTaiKhoan" class="btn btn-success">Chỉnh sửa thông tin cá nhân</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

