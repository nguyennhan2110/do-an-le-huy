@model ModalEF.EF.DangKyNhanLai

@{
    ViewBag.Title = "Đăng ký nhận lại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card d-flex">
            <div class="card-body card-block col-8 align-self-center">
                @using (Html.BeginForm("Create", "DangKyNhanLais", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row form-group my-3">
                        <label class="pr-1 form-control-label col-md-3"><strong>Lời nhắn</strong></label>
                        @Html.TextAreaFor(model => model.LoiNhan, new { htmlAttributes = new { @class = "col-md-6 form-control" } })
                        @Html.ValidationMessageFor(model => model.LoiNhan, "", new { @class = "text-danger" })
                    </div>
                    
                    <div class="row form-group my-3">
                        <div class="col-md-offset-2 col-md-5">
                            <i class="menu-icon fa fa-arrow-circle-left"></i>
                            @Html.ActionLink("Quay lại", "Index")
                        </div>

                        <div class="col-md-offset-2 col-md-5">
                            <input type="submit" value="Đăng ký" class="btn btn-success" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
