@model ModalEF.EF.DangKyNhanLai

@{
    ViewBag.Title = "Chi tiết đăng ký nhận";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>Chi tiết bài đăng</strong>
            </div>

            <div class="card-body card-block ml-3">
                @using (Html.BeginForm("Details", "DangKyNhanLai", FormMethod.Get))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row form-group">
                        <label class="pr-1  form-control-label col-md-3"><strong>Người đăng ký</strong></label>
                        @Html.DropDownList("MaTaiKhoan", null, htmlAttributes: new { @class = "col-md-6 form-control", @disabled = "" })
                        @Html.ValidationMessageFor(model => model.MaTaiKhoan, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group">
                        <label class="pr-1  form-control-label col-md-3"><strong>Bài đăng</strong></label>
                        @Html.DropDownList("MaBaiDang", null, htmlAttributes: new { @class = "col-md-6 form-control", @disabled = "" })
                        @Html.ValidationMessageFor(model => model.MaBaiDang, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group">
                        <label class="pr-1  form-control-label col-md-3"><strong>Lời nhắn</strong></label>
                        @Html.EditorFor(model => model.LoiNhan, new { htmlAttributes = new { @class = "col-md-6 form-control", @disabled = "" } })
                        @Html.ValidationMessageFor(model => model.LoiNhan, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group">
                        <label class="pr-1  form-control-label col-md-3"><strong>Ngày đăng ký</strong></label>
                        @Html.EditorFor(model => model.NgayDangKyNhan, new { htmlAttributes = new { @class = "col-md-6 form-control", @disabled = "" } })
                        @Html.ValidationMessageFor(model => model.NgayDangKyNhan, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group">
                        <div class="col-md-offset-2 col-md-5">
                            <i class="menu-icon fa fa-arrow-circle-left"></i>
                            @Html.ActionLink("Quay lại", "Index")
                        </div>
                        <div class="col-md-offset-2 col-md-5">
                            <a href="/Admin/BaiDang/Details/@Model.MaBaiDang" class="btn btn-success">Xem chi tiết bài đăng</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

