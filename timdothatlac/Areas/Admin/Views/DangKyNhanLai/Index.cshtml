@model IEnumerable<ModalEF.EF.DangKyNhanLai>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách đăng ký nhận lại";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Danh sách đăng ký nhận lại</strong>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Index", "DangKyNhanLai", FormMethod.Get))
                        {
                            <div class="row form-group">
                                <div class="col-lg-12">

                                    <div class="col-md-6">
                                        <div class="form-inline">
                                            <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nhập thông tin" />
                                            <button type="submit" class="btn btn-warning" style="margin-left:20px">Tìm kiếm</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã bài đăng</th>
                                        <th>Tiêu đề</th>
                                        <th>Người đăng ký</th>
                                        <th>Ngày tạo</th>
                                        <th>Lời nhắn</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.MaBaiDang</td>
                                            <td>@item.BaiDang.TieuDe</td>
                                            <td>@item.TaiKhoan.Ten</td>
                                            <td>@item.NgayDangKyNhan</td>
                                            <td>@item.LoiNhan</td>
                                            <td>
                                                <a href="/Admin/DangKyNhanLai/Details/@item.MaDangKyNhan" class="btn-sm btn-info">Xem chi tiết</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>