@model PagedList.IPagedList<ModalEF.EF.TaiKhoan>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý người dùng</h2>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Danh sách người dùng</strong>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Index", "TaiKhoan", FormMethod.Get))
                        {
                            <div class="row form-group">
                                <div class="col-lg-12">

                                    <div class="col-md-6">
                                        <div class="form-inline">
                                            <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nhập tên người dùng" />
                                            <button type="submit" class="btn btn-warning" style="margin-left:20px">Tìm kiếm</button>
                                        </div>
                                    </div>

                                    <br />
                                    <div class="col-md-6">
                                        <a class="btn btn-success" href="@Url.Action("Create", "TaiKhoan")">Thêm mới</a>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Email</th>
                                        <th>Tên người dùng</th>
                                        <th>Giới tính</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row_@item.MaTaiKhoan">
                                            <td>@item.Email</td>
                                            <td>@item.Ten</td>
                                            <td>@Html.Raw(item.GioiTinh ? "Nam" : "Nữ")</td>
                                            <td><a href="#" class="btn-active" data-id="@item.MaTaiKhoan">@Html.Raw(item.TrangThai ? "Kích hoạt" : "Khoá")</a></td>
                                            <td>
                                                <a href="/Admin/TaiKhoan/Edit/@item.MaTaiKhoan">Xem chi tiết</a>
                                                |
                                                <a href="/Admin/TaiKhoan/Edit/@item.MaTaiKhoan">Chỉnh sửa</a>
                                                |
                                                @Ajax.ActionLink("Xoá", "Delete", new { @id = item.MaTaiKhoan }, new AjaxOptions
                                               {
                                               Confirm = "Bạn có muốn xoá bản ghi này?",
                                               OnComplete = "$('#row_" + @item.MaTaiKhoan + "').remove()",
                                               HttpMethod = "Delete"
                                               })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Areas/Admin/Assets/js/controller/userController.js"></script>
