@model ModalEF.EF.DanhMuc
@{
    ViewBag.Title = "Tạo danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>Thêm mới danh mục</strong>
            </div>

            <div class="card-body card-block ml-3">
                @using (Html.BeginForm("Create", "DanhMuc", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row form-group">
                        <label class="pr-1  form-control-label col-md-3"><strong>Tên danh mục</strong></label>
                        @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "col-md-6 form-control" } })
                        @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group">
                        <div class="col-md-offset-2 col-md-5">
                            <i class="menu-icon fa fa-arrow-circle-left"></i>
                            @Html.ActionLink("Quay lại", "Index")
                        </div>

                        <div class="col-md-offset-2 col-md-5">
                            <input type="submit" value="Tạo mới" class="btn btn-success" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


