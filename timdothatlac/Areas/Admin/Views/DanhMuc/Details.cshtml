@model ModalEF.EF.DanhMuc
@{
    ViewBag.Title = "Chi tiết danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>Chi tiết tài khoản</strong>
            </div>

            <div class="card-body card-block ml-3">
                @using (Html.BeginForm("Details", "DanhMuc", FormMethod.Get))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row form-group">
                        <label class="pr-1  form-control-label col-md-3"><strong>Tên danh mục</strong></label>
                        @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "col-md-7 form-control", @disabled = "" } })
                        @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group">
                        <label class="pr-1  form-control-label col-md-3"><strong>Mã sinh viên</strong></label>
                        @Html.EditorFor(model => model.NgayTao, new { htmlAttributes = new { @class = "col-md-7 form-control", @disabled = "" } })
                        @Html.ValidationMessageFor(model => model.NgayTao, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group">
                        <div class="col-md-offset-2 col-md-5">
                            <i class="menu-icon fa fa-arrow-circle-left"></i>
                            @Html.ActionLink("Quay lại", "Index")
                        </div>
                        <div class="col-md-offset-2 col-md-5">
                            <a href="/Admin/DanhMuc/Edit/@Model.MaDanhMuc" class="btn btn-success">Chỉnh sửa</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

