@model ModalEF.EF.BaiDang
@{
    /**/

    ViewBag.Title = "Chỉnh sửa bài đăng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>Chỉnh sửa bài đăng</strong>
            </div>

            <div class="card-body card-block ml-3">
                @using (Html.BeginForm("Edit", "BaiDang", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaBaiDang)
                    @Html.HiddenFor(model => model.MaTaiKhoan)
                    @Html.HiddenFor(model => model.MaAnhDinhKem)
                    @Html.HiddenFor(model => model.NgayTao)
                    @Html.HiddenFor(model => model.NgayDuyet)

                    <div class="row form-group">
                        <label class="pr-1  form-control-label col-md-3"><strong>Người tạo</strong></label>
                        @Html.DropDownList("MaTaiKhoan", null, htmlAttributes: new { @class = "col-md-6 form-control", @disabled = "" })
                        @Html.ValidationMessageFor(model => model.MaTaiKhoan, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group">
                        <label class="pr-1  form-control-label col-md-3"><strong>Tiêu đề</strong></label>
                        @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "col-md-6 form-control" } })
                        @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group">
                        <label class="pr-1  form-control-label col-md-3"><strong>Nội dung</strong></label>
                        @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "col-md-6 form-control" } })
                        @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group">
                        <label class="pr-1  form-control-label col-md-3"><strong>Danh mục</strong></label>
                        @Html.DropDownList("MaDanhMuc", null, htmlAttributes: new { @class = "col-md-6 form-control" })
                        @Html.ValidationMessageFor(model => model.MaDanhMuc, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group">
                        <label class="pr-1  form-control-label col-md-3"><strong>Trạng thái duyệt</strong></label>
                        <div class="col-md-2">
                            @Html.RadioButtonFor(model => model.TrangThaiDuyet, "True")
                            Duyệt
                        </div>
                        <div class="col-md-2">
                            @Html.RadioButtonFor(model => model.TrangThaiDuyet, "False")
                            Chưa duyệt
                        </div>
                        @Html.ValidationMessageFor(model => model.TrangThaiDuyet, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group">
                        <label class="pr-1  form-control-label col-md-3"><strong>Trạng thái bài đăng</strong></label>
                        @Html.DropDownList("MaTrangThaiBaiDang", null, htmlAttributes: new { @class = "col-md-6 form-control" })
                        @Html.ValidationMessageFor(model => model.MaTrangThaiBaiDang, "", new { @class = "text-danger" })
                    </div>

                    <div class="row form-group">
                        <label class="pr-1  form-control-label col-md-3"><strong>Ảnh bìa</strong></label>
                        <div class="col-12 col-md-9"><input type="file" name="file" class="form-control-file"></div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-offset-2 col-md-5">
                            <i class="menu-icon fa fa-arrow-circle-left"></i>
                            @Html.ActionLink("Quay lại", "Index")
                        </div>
                        <div class="col-md-offset-2 col-md-5">
                            <input type="submit" value="Lưu" class="btn btn-success" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
